	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="reservation.dao">
	<insert id="insertRes" parameterType="reservation">
		insert t_class_reservation (
			id,
			member_no,
			class_no,
			start_time,
			using_time,
			res_for
		) values (
			'calabace',
			1,
			302,
			#{startTime},
			#{usingTime},
			#{resFor}
		)
	</insert>
	<select id="selectReservation" parameterType="String" resultType="reservation">
		select res_no resNo, start_time startTime, using_time usingTime
		  from t_class_reservation
		 where startTime = #{}
		 order by resNo desc
	</select>
